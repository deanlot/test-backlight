{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "reactNamespace": "React",
    "module": "ESNext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "*"
      ],
      "@divriots/starter-react-sui/*": [
        "*"
      ]
    }
  },
  "exclude": [
    "node_modules/**/*",
    "theme-playground/**/*",
    "ShadowPlaygroundStitches/**/*",
    "**/*/test/*.*",
    "./dist"
  ]
}